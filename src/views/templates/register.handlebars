<div class="container">
    <div class="card card-register">
        <h2>Register</h2>
        <form id="register-form" method="post">
            <div>
                <label for="first_name" class="form-label">First Name</label>
                <input type="text" class="form-control" name="first_name" required="true">
            </div>
            <div>
                <label for="last_name" class="form-label">Last Name</label>
                <input type="text" class="form-control" name="last_name" required="true">
            </div>
            <div>
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" required="true">
            </div>
            <div>
                <label for="age" class="form-label">Age</label>
                <input type="number" class="form-control" name="age" required="true">
            </div>
            <div>
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" required="true">
            </div>
            <button type="submit">Register</button>
            <div>
                <p>You already have an account? </p> <a href="/api/sessions/viewlogin">login</a>
            </div>
        </form>
    </div>
</div>